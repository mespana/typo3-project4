    view {
        layoutRootPath = EXT:gql_partner/Resources/Private/Layouts/
        partialRootPath = EXT:gql_partner/Resources/Private/Partials/
        templateRootPath = EXT:gql_partner/Resources/Private/Templates/
    }
}


